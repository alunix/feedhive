<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- below HorizontalScrollView for bottom button is for debugging and future use. -->
    <HorizontalScrollView
        android:id="@+id/toolbutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chlist_bottom_btn_height"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/btn_items_favorite"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/items_favorite"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_items_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/items_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_items_all"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/items_all"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_update_all"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/refresh"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_add_channel"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/add_channel"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_more_menu"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/more_menu"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_setting"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/setting"
                android:clickable="true"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/toolbutton"
        >
    </android.support.v4.view.ViewPager>
</RelativeLayout>
